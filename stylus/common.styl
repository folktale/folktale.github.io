code {
  font-family: mono-font;
}

body {
  font-family: body-font;
  color: #5f5f5f;
  font-size: 16px;
}

.content {
  display: block;
  max-width: 800px;
  margin: 2em auto;
  content();
}

.borderless {
  border: none !important;
}

.boxes-3 {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;

  .box {
    flex-grow: 0;
    width: 33%;
    text-align: center;
    padding: 0 2em;
    align-self: flex-start;
    box-sizing: border-box;
    margin-bottom: 2em;
  }

  .box-title {
    font-weight: bold;
    margin: 0.5em 0 1.5em 0;
    text-transform: uppercase;
    font-family: sans-font;
    letter-spacing: 0.03em;
  }

  a {
    link();
  }
}


.separated-section {
  border-top: 1px solid clouds;
  margin-top: 2em;
  padding-top: 1em;
}


.info-section {
  border-left: 5px solid silver;
  background: clouds;
  padding: 1em;
}


.breadcrumbs {
  position: relative;
  top: 1.5em;
  font-size: 11px;
  font-family: sans-font;
  color: concrete;
  letter-spacing: 0.02em;

  .separator {
    color: silver;
  }

  a {
    link()
  }
}

.content-with-sidebar {
  max-width: 960px;

  .row-with-sidebar {
    display: flex;
  }

  .navigation-toc {
    flex-grow: 0;
    width: 200px;
    margin-right: 2em;
    font-family: sans-font;
    font-size: 0.9em;
    margin-top: 1em;
    
    .toc-section-title {
      font-weight: bold;
      text-transform: uppercase;
      margin: 1em 0 0.4em 0;
      color: silver;
    }

    .toc-items {
      margin-bottom: 2em;
    }

    .toc-item {
      padding: 0.3em 0;
      transition: padding 0.2s ease-out;

      &:hover {
        padding-left: 9px;
        border-left: 3px solid lighten(peter-river, 50%);

        a, a:hover {
          text-decoration: none;
        }
      }
    }

    a {
      link();
    }

    .toc-current-item, .toc-current-item:hover {
      border-left: 3px solid peter-river;
      padding-left: 7px;
    }

    .toc-current-item > a {
      font-weight: bold;
    }
  }

  .content-panel {
    flex-shrink: 1;
  }
}