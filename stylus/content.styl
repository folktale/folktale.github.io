content() {
  .title {
    font-family: heading-font;
    color: wet-asphalt;
    font-weight: 400;
    font-size: 50px;
    line-height: 120%;
    letter-spacing: -0.02em;
    margin-bottom: 0.5em;
  
    &:before {
      content: ' ';
      width: 2em;
      height: 1px;
      display: block;
      border-bottom: 3px solid greyish;
      margin: 0.5em 0em 0.3em -0.6em;
    }
  }

  .section-title {
    font-family: sans-font;
    color: concrete;
    font-size: 20px;
    font-weight: bold;
    line-height: 120%;
    letter-spacing: -0.01em;
    margin-bottom: 1em;
    text-transform: uppercase;
  }

  .mini-title {
    line-height: 150%;
    font-family: heading-font;
    font-size: 20px;
    letter-spacing: 0.02em;
  }

  .content-area {
    font-size: 18px;
    line-height: 1.4em;

    p {
      margin-bottom: 1.5em;
    }

    ul {
      list-style: disc;
      margin: 0.5em 0em 1em 1.5em;
    }
  }
}